{% extends 'base.html.twig' %}
{% block title %}Article {% endblock %}
{% block body %}
    <h1> Article </h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Publication Date</th>
                <td>{{ article.publicationDate ? article.publicationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ article.summary}}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ article.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_article_index') }}">Назад к списку статей</a>
    <a href="{{ path('app_article_edit') }}">Редактировать статью</a>
    {{ include('article/delete_form.html.twig') }}
{% endblock %}