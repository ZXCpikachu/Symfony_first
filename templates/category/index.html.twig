{% extends 'base.html.twig' %}
{% block title %}Category index {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/old_style.css') }}"/>
{% endblock %}
{% block body %}
    {{ include('./nav_admin.html.twig')  }}
    <div class="white-block">
    <div id="container">
        <div class="container">
            <a href="{{ path('app_homepage') }}">
                <img id="logo" src="{{ asset('images/logo.jpg') }}" alt="Widget News" />
            </a>
            <hr class="separator">
        </div>
    </div>
        <h2>Список категорий</h2>
    <table class="table">
        <thead>
        <tr>
            <th>id</th>
            <th>Название</th>
            <th>Содержание</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr onclick="window.location.href='{{ path('app_category_edit', {'id': category.id}) }}'" style="cursor:pointer;">

                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td>Ничего не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_category_new') }}">Create new</a>
    </div>
{% endblock %}