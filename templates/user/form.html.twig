{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.js') }}"></script>
    <script src="{{ asset('js/sendPOSTData.js') }}"></script>
{% endblock %}
{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.login, {'attr': {'class': 'form-control', 'placeholder': 'Логин пользователя' }}) }}
</div>
<div class="form-group">
    {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Пароль пользователя', 'value': ''}, 'type': 'text'}) }}
</div>
<div class="form-group">
    <div class="form-check">
        {{ form_widget(form.roles, {'checked': user.roles|length == 2, 'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.roles) }}
    </div>
</div>
{{ form_end(form) }}
<nav class="navbar-expand">
    <ul class="navbar-nav">
        <button class="btn btn-primary" id="send" data-route="{{ app.request.getPathInfo() }}">{{ button_label|default('Сохранить') }}</button>
        {{ form_start(form, { 'attr': {'id': 'form_cancel' }}) }}
        <button class="btn" name="cancel">{{ button_label|default('Отмена') }}</button>
        {{ form_end(form) }}
    </ul>
</nav>