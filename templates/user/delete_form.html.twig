<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить данные пользователя ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <h2>
        <span>
            <button class="btn btn-primary">Удалить</button>
        </span>
    </h2>
</form>